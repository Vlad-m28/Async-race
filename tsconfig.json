{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "strictPropertyInitialization": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "baseUrl": ".",
      "paths": {
        "@core/*": ["core/*"],
        "@pages/*": ["pages/*"],
        "@api/*": ["api/*"],
        "@controllers/*": ["src/controllers/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }